@model IEnumerable<MIS4200ProjectTeam7.Models.CoreValues>

@{
    ViewBag.Title = "Index";
}

<h2>All Employee Recognitions</h2>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-9">
            @using (Html.BeginForm("Index", "coreValues", FormMethod.Get))
            {
                <p>
                    Search for users by first or last name:
                    @Html.TextBox("searchString")
                    <input type="submit" value="Search" />
                </p>
            }
        </div>

    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nominator.nominator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nominee.nominee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.award)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recognizationDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nominator.fullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nominee.fullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.award)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recognizationDate)
            </td>
            <td>
               
                @Html.ActionLink("Details", "Details", new { id = item.ID })                
            </td>
        </tr>
    }

</table>
